<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="#1A1A1A" android:elevation="4dp"
    android:weightSum="4"> <LinearLayout
    android:id="@+id/nav_download"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="4dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/icon_nav_download"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_download"
        android:contentDescription="@string/footer_download"
        android:tint="?attr/colorPrimary"/>

    <TextView
        android:id="@+id/text_nav_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/footer_download"
        android:textSize="12sp"
        android:textColor="?attr/colorPrimary"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/nav_main_downloads"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/icon_nav_main_downloads"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_nav_downloads"
            android:contentDescription="@string/footer_nav_downloads"/>

        <TextView
            android:id="@+id/text_nav_main_downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_nav_downloads"
            android:textSize="12sp"
            android:textColor="@color/rj_gray"/> </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_play"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/icon_nav_play"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_play"
            android:contentDescription="@string/footer_play"/>

        <TextView
            android:id="@+id/text_nav_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_play"
            android:textSize="12sp"
            android:textColor="@color/rj_gray"/> </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/icon_nav_settings"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="@string/footer_settings"/>

        <TextView
            android:id="@+id/text_nav_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_settings"
            android:textSize="12sp"
            android:textColor="@color/rj_gray"/> </LinearLayout>
</LinearLayout>